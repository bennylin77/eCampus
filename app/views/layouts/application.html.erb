<!DOCTYPE html>
<html lang="en">
<head>
  <title>E3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">  
</head>
<body>
<%= render '/layouts/menu'%>
<div class="container-fluid main">
<% flash.each_with_index do |(type, message), i| %>
  <div class="alert <%= alert_class_for(type) %> flash_<%=i%> alert-dismissible fade in">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <%= message %>
  </div>
<% end %>	
<%if params[:controller]=='main' or params[:controller]=='users'%>
	<%= yield %>
<%else%>
	<div class="row course_container">
	<%= render '/layouts/sidebar'%>
		<div class="col-sm-10 col-sm-offset-2 col-md-10 col-md-offset-2 course_content">
		  <div class="alert alert-success alert-dismissible fade in" id="course_alert">
		  </div>	 	
		  <%= yield %>
		</div>
	</div>
<%end%>
</div>


<script>
	<% flash.each_with_index do |(type, message), i| %>
		$(".flash_<%=i%>").fadeTo(3000, 500).slideUp(400, function(){
	    	$(".flash_<%=i%>").alert('close');
	    }); 
	<% end %>
	$("#course_alert").hide();
	function courseAlertShow(type, msg) {
		$("#course_alert").addClass( type );
		$("#course_alert").html("<button type='button' class='close' onclick='$(\"#course_alert\").hide()'><span aria-hidden='true'>&times;</span><span class='sr-only'>Close</span></button>"+msg)
		$("#course_alert").show(600);
		$("#course_alert").fadeTo(3000, 500).slideUp(400, function(){
	    	$("#course_alert").removeClass( type );
		    $("#course_alert").html("");
	    }); 			
	}
		
	

</script>
</body>
</html>
