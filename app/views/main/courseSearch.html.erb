<div class="row search_top">
	<div class="col-md-12">
	<div class="row search_title_container">
	  <div class="col-md-offset-3 col-md-6 general_title">搜尋課程</div>
	</div>	
	<%= form_tag '/main/courseSearch', method: 'get', class: "navbar-form search_form", role: "search" do |f| %>
	<div class="row ">
	<div class="input-group add-on col-md-offset-4 col-md-5">
		<%= text_field_tag :term, nil, class: "form-control", placeholder: "教師名/課名/課號"%>      
      <div class="input-group-btn">
        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
      </div>
    </div>
	<div class="row margin-top-20">
 	<div class="col-md-offset-1 col-md-2">
	<select class="form-control selectpicker"><option>學士課程</option><option>研究所課程</option></select> 		
 	</div>	 
 	<div class="col-md-2">
	<select class="form-control selectpicker"><option>資訊學院</option><option>客家文化學院</option></select> 		
 	</div>	 
 	<div class="col-md-2">
	<select class="form-control selectpicker"><option>IMS管理科學系</option><option>IEM工業工程與管理學系</option></select> 		
 	</div>	 
  	<div class="col-md-2">
	<select class="form-control selectpicker"><option>群己</option><option>公民</option></select> 		
 	</div>	 
 	<div class="col-md-2">
	<select class="form-control selectpicker"><option>星期一</option><option>星期二</option></select> 		
 	</div>	  		 	 	
    </div>
	<% end %>
	</div>
	</div>
</div>
<div class="row search_bottom">
	<div class="col-md-12">	
		<div class="row search_result_container">
		  <div class="col-md-offset-3 col-md-6 general_title">搜尋結果</div>
		</div>			
		<div id="masonry-container" class="transitions-enabled clearfix">
 			<%=render(:partial => "course_block", :collection => @result)%> 
		</div>
	</div>
</div>

<%= javascript_tag do %>
	$(function() 
	{
		//initial masonry
		var $container = $('#masonry-container');
		$container.imagesLoaded(function(){
			$container.masonry({
			      itemSelector: '.course_box',
			      columnWidth: 100,
			      gutter: 40,
			      isFitWidth: true
			});			
		});			
	});	
<% end %>

