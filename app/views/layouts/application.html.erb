<!DOCTYPE html>
<html lang="en">
<head>
  <title>E3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">  
</head>
<body>
<%= render '/layouts/menu'%>
<div class="container-fluid main">
<% flash.each_with_index do |(type, message), i| %>
  <div class="alert <%= alert_class_for(type) %> flash_<%=i%> alert-dismissible fade in">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <%= message %>
  </div>
<% end %>	
<%unless params[:controller]=='courses'%>
	<%= yield %>
<%else%>
	<div class="row">
	<%= render '/layouts/sidebar'%>
	 <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
	<%= yield %>
	</div>
	</div>
<%end%>
</div>


<script>
<% flash.each_with_index do |(type, message), i| %>
	$(".flash_<%=i%>").fadeTo(4000, 500).slideUp(500, function(){
    	$(".flash_<%=i%>").alert('close');
    }); 
<% end %>
</script>
</body>
</html>
